<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingTop="2dip" android:paddingBottom="2dip">
	<ImageView android:id="@+id/expense_list_item_icon" android:layout_width="24dip" android:layout_height="24dip"
		android:layout_margin="5dip" android:layout_marginRight="10dip" />
	<TextView android:id="@+id/expense_list_item_date" android:layout_toRightOf="@+id/expense_list_item_icon"
		android:layout_height="wrap_content" android:layout_width="fill_parent" />
	<TextView android:id="@+id/expense_list_item_value" android:layout_below="@+id/expense_list_item_date"
		android:layout_toRightOf="@+id/expense_list_item_icon" android:layout_height="wrap_content" android:layout_width="fill_parent" />
	<TextView android:id="@+id/expense_list_item_descr" android:layout_below="@+id/expense_list_item_value"
		android:layout_toRightOf="@+id/expense_list_item_icon" android:layout_height="wrap_content" android:layout_width="fill_parent" />
	<TextView android:id="@+id/expense_list_item_labels" android:layout_below="@+id/expense_list_item_descr"
		android:layout_toRightOf="@+id/expense_list_item_icon" android:layout_height="wrap_content" android:layout_width="fill_parent" />
</RelativeLayout>
